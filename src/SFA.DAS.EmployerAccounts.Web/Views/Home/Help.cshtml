@{
    ViewBag.PageID = "page-help";
    ViewBag.Title = "Manage apprenticeships service help";
    ViewBag.ShowNav = false;
    ViewBag.GaData.Vpv = "/page-help";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">
            @ViewBag.Title
        </h1>
        <p><a class="govuk-link" href="mailto:helpdesk@manage-apprenticeships.service.gov.uk">helpdesk@manage-apprenticeships.service.gov.uk</a></p>
        <p class="govuk-body margin-bottom-small">
            Telephone: 08000 150 600
        </p>
        <p class="govuk-body">
            8am to 8pm, Monday to Friday
        </p>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="/">Your accounts</a></li>
            <li>@ViewBag.Title</li>
        </ol>
    </div>
}
