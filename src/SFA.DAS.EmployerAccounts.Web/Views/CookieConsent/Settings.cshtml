@using SFA.DAS.EmployerAccounts.Web.Helpers
@{
    var savedClass = Model?.GetType().GetProperty("Saved").GetValue(Model) ? "" : "hidden";
    var analyticsConsentOnChecked = Request.Cookies["analyticsConsent"]?.Value == "True" || Request.Cookies["analyticsConsent"] == null ? "checked" : "";
    var marketingConsentOnChecked = Request.Cookies["marketingConsent"]?.Value == "True" ? "checked" : "";
    var analyticsConsentOffChecked = Request.Cookies["analyticsConsent"]?.Value == "False" ? "checked" : "";
    var marketingConsentOffChecked = Request.Cookies["marketingConsent"]?.Value == "False" || Request.Cookies["marketingConsent"] == null ? "checked" : "";
}
<div class="grid-row">

    <div class="column-two-thirds">
        <p>
            <div class="@savedClass" data-cookie-confirmation="true">
                <section aria-live="polite" role="region">
                    <div style="width: 66.6%; background: #00703c; padding: 10px 20px 20px 20px; text-align: center; min-width: 220px;">
                        <h2 style="color: #fff;" class="heading-medium">Your cookie settings were saved</h2>
                    </div>
                </section>
            </div>
        </p>

        <header class="page-header">
            <div>
                <h1 class="heading-xlarge">
                    Cookies
                </h1>
            </div>
        </header>

        <p>
            Cookies are files saved on your phone, tablet or computer when you visit a website.
        </p>

        <p>
            We use cookies to store information about how you use the website, such as the pages you visit.
        </p>


        <h2 class="heading-large">Cookie settings</h2>

        <p>
            We use 3 types of cookie. You can choose which cookies you're happy for us to use.
        </p>


        <form method="POST" action="@Url.Action(ControllerConstants.Settings)">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <fieldset class="inline" aria-describedby="hint-cookie-1">
                    <legend>
                        <h3 class="heading-medium">Cookies that measure website use</h3>
                    </legend>

                    <div id="hint-cookie-1" class="form-hint">
                        <p>
                            We use Google Analytics to measure how you use the website so we can improve it based on user needs. Google Analytics sets cookies that store anonymised information about:
                        </p>
                        <ul class="list list-bullet">
                            <li>
                                how you got to the site
                            </li>
                            <li>the pages you visit on the service and how long you spend on each page</li>
                            <li>
                                what you click on while you're visiting the site
                            </li>
                        </ul>
                        <p>
                            We do not allow Google to use or share the data about how you use this site.
                        </p>
                        <p>
                            Cookies may be set by other third-party websites to do things like measure how you view YouTube videos that are on the service.
                        </p>
                        <p>If you register an account with the Find an apprenticeship service or the Manage apprenticeships service, both provided by the Education and Skills Funding Agency, the information collected using analytics cookies will be linked to your account to help us make the service work better for you.</p>
                    </div>

                    <label for="radio-cookie-analytics-0" class="block-label selection-button-radio">
                        <input type="radio" name="analyticsConsent" id="radio-cookie-analytics-0" value="true" @analyticsConsentOnChecked>
                        On
                    </label>

                    <label for="radio-cookie-analytics-1" class="block-label selection-button-radio">
                        <input type="radio" name="analyticsConsent" id="radio-cookie-analytics-1" value="false" @analyticsConsentOffChecked>
                        Off
                    </label>

                </fieldset>
            </div>

            <div class="form-group">
                <fieldset class="inline" aria-describedby="hint-cookie-1">
                    <legend>
                        <h3 class="heading-medium">Cookies that help with our communications and marketing</h3>
                    </legend>

                    <div id="hint-cookie-1" class="form-hint">
                        <p>These cookies help us improve the relevancy of advertising campaigns you receive from us. </p>
                        <p>We also share information about your use of our site with our social media, advertising and analytics partners, who may combine it with other information that they’ve collected from your use of their services to guide the advertising that you receive on their service.</p>
                    </div>

                    <label for="radio-cookie-marketing-0" class="block-label selection-button-radio">
                        <input type="radio" name="marketingConsent" id="radio-cookie-marketing-0" value="true" @marketingConsentOnChecked>
                        On
                    </label>

                    <label for="radio-cookie-marketing-1" class="block-label selection-button-radio">
                        <input type="radio" name="marketingConsent" id="radio-cookie-marketing-1" value="false" @marketingConsentOffChecked>
                        Off
                    </label>

                </fieldset>
            </div>

            <h3 class="heading-medium">
                Strictly necessary cookies
            </h3>
            <p>These essential cookies do things like:</p>
            <ul class="list list-bullet">
                <li>remember the notifications you've seen so we do not show them to you again</li>
                <li>remember your progress through a form</li>
            </ul>
            <p>They always need to be on.</p>
            <p><a href="@Url.Action(ControllerConstants.Details)">Find out more about cookies on this service</a></p>


            <button class="button" type="submit" id="btn-save-cookie-settings">Save changes</button>
        </form>


    </div>
</div>