@using SFA.DAS.EmployerAccounts.Web.Helpers
@{ 
    ViewBag.Title = "Cookie settings";
    ViewBag.PageID = "page-cookie-settings";
    ViewBag.GaData.Vpv = "/page-cookie-settings";
    Layout = "~/Views/Shared/_Layout_CDN.cshtml";
}
<div class="das-cookie-settings" id="cookie-settings">
    <div class="das-cookie-settings__inner-wrap" id="cookie-settings">
        <div class="das-notification das-notification--success das-cookie-settings__confirmation" data-cookie-confirmation="true" tabindex="0">
            <section aria-live="polite" role="region">
                <h2 class="das-notification__heading">Your cookie settings were saved</h2>
                <p class="das-notification__body"><a class="govuk-link govuk-link--no-visited-state cookie-settings__prev-page" href="#" data-module="track-click">Go back to the page you were looking at</a></p>
            </section>
        </div>
        <h1 class="govuk-heading-xl">Cookies</h1>

        <p>Cookies are files saved on your phone, tablet or computer when you visit a website.</p>
        <p>We use cookies to store information about how you use this service, such as the pages you visit.</p>

        <h2 class="govuk-heading-l">Cookie settings</h2>

        <div class="das-js-hide">
            <p>We use Javascript to set most of our cookies. Unfortunately Javascript is not running on your browser, so you cannot change your settings. You can try:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>reloading the page</li>
                <li>turning on Javascript in your browser</li>
            </ul>
        </div>

        <div class="das-js-show das-cookie-settings__form-wrapper">
            <p>This service is delivered over a set of subdomains.</p>
            <p>Your cookie preferences on this service automatically apply to the following domains:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>accounts.manage-apprenticeships.service.gov.uk</li>
                <li>manage-apprenticeships.service.gov.uk</li>
                <li>finance.manage-apprenticeships.service.gov.uk</li>
                <li>reporting.manage-apprenticeships.service.gov.uk</li>
                <li>permissions.manage-apprenticeships.service.gov.uk</li>
                <li>securefunding.manage-apprenticeships.service.gov.uk</li>
                <li>beta-login.manage-apprenticeships.service.gov.uk</li>
                <li>selection.manage-apprenticeships.service.gov.uk</li>
            </ul>
            <p>We use 3 types of cookie. You can choose which cookies you're happy for us to use.</p>
            <hr class="govuk-section-break govuk-section-break--l" />
            <form data-module="cookie-settings">
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset" aria-describedby="hint-cookie-1">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Cookies that measure website use</legend>
                        <div id="hint-cookie-1" class="govuk-hint">
                            <p>We use Google Analytics to measure how you use the webservice so we can improve it based on user needs. We do not allow Google to use or share the data about how you use this service.</p>
                            <p>Google Analytics sets cookies that store anonymised information about:</p>
                            <ul class="govuk-list govuk-list--bullet govuk-hint">
                                <li>how you got to the service</li>
                                <li>the pages you visit on GOV.UK and government digital services, and how long you spend on each page</li>
                                <li>what you click on while you're visiting the service</li>
                            </ul>
                            <p>Cookies may be set by other third-party services to do things like measure how you view YouTube videos that are on the service.</p>
                            <p>If you have an account with other services provided by the Education and Skills Funding Agency, the information collected using analytics cookies will be linked to your account. This will help us make the service work better for you.</p>
                        </div>
                        <div class="govuk-radios">
                            <div class="gem-c-radio govuk-radios__item">
                                <input type="radio" name="cookies-AnalyticsConsent" id="radio-cookie-analytics-0" value="on" class="govuk-radios__input">
                                <label for="radio-cookie-analytics-0" class="govuk-label govuk-radios__label">Use cookies that measure my service use</label>
                            </div>
                            <div class="gem-c-radio govuk-radios__item">
                                <input type="radio" name="cookies-AnalyticsConsent" id="radio-cookie-analytics-1" value="off" class="govuk-radios__input">
                                <label for="radio-cookie-analytics-1" class="govuk-label govuk-radios__label">Do not use cookies that measure my service use</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <hr class="govuk-section-break govuk-section-break--l" />
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset" aria-describedby="hint-cookie-2">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Cookies that help with our communications and marketing</legend>
                        <div id="hint-cookie-2" class="govuk-hint">
                            <p>These cookies help us improve the relevancy of advertising campaigns you receive from us.</p>
                            <p>We also share information about your use of this service with our social media, advertising and analytics partner. They combine it with other information that they&rsquo;ve collected from your use of our services to guide the advertising that you receive.</p>
                            <ul class="govuk-list govuk-list--bullet govuk-hint">
                                <li>Use cookies that help with communications and marketing</li>
                                <li>Do not use cookies that help with communications and marketing</li>
                            </ul>
                        </div>
                        <div class="govuk-radios">
                            <div class="gem-c-radio govuk-radios__item">
                                <input type="radio" name="cookies-MarketingConsent" id="radio-cookie-marketing-0" value="on" class="govuk-radios__input">
                                <label for="radio-cookie-marketing-0" class="govuk-label govuk-radios__label">Use cookies that help with communications and marketing</label>
                            </div>
                            <div class="gem-c-radio govuk-radios__item">
                                <input type="radio" name="cookies-MarketingConsent" id="radio-cookie-marketing-1" value="off" class="govuk-radios__input">
                                <label for="radio-cookie-marketing-1" class="govuk-label govuk-radios__label">Do not use cookies that help with communications and marketing</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <hr class="govuk-section-break govuk-section-break--l" />
                <button class="govuk-button" type="submit">Save changes</button>
            </form>
        </div>
    </div>
</div>

@section breadcrumb {
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a href="/" class="govuk-breadcrumbs__link">Your accounts</a>
            </li>
            <li class="govuk-breadcrumbs__list-item" aria-current="page">Cookies</li>
        </ol>
    </div>
}
