@model SFA.DAS.EmployerAccounts.Web.ViewModels.VacancyViewModel

<section class="dashboard-section">
    <h2 class="section-heading heading-large">
        Your apprenticeship advert
    </h2>
    <p>You've started creating an advert for your apprenticeship.</p>

    <table class="responsive">
        <tr>
            <th scope="row" class="tw-35">
                Title
            </th>
            <td class="tw-65">
                @(Model?.Title)
            </td>
        </tr>
        <tr>
            <th scope="row" class="tw-35">
                Closing date
            </th>
            <td class="tw-65">
                @(Model.ClosingDateText)
            </td>
        </tr>
        <tr>
            <th scope="row">
                Status
            </th>
            <td>
                <strong class="govuk-tag govuk-tag--inactive">PENDING REVIEW</strong>
            </td>
        </tr>
        <tr>
            <th scope="row" class="tw-35">
                Applications
            </th>
            <td class="tw-65">
                <a href="/" class="govuk-link"> No applications yet</a>
            </td>
        </tr>
    </table>
    <p>
        <a href="@Url.EmployerRecruitAction()" class="govuk-link">Go to your vacancy dashboard</a>
    </p>
</section>