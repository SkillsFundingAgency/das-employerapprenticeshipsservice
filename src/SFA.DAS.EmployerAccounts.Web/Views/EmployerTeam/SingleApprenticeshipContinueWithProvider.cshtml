@using SFA.DAS.EmployerAccounts.Web.Extensions
@model SFA.DAS.EmployerAccounts.Web.ViewModels.ApprenticeshipViewModel

<section class="dashboard-section">
    <h2 class="section-heading heading-large" id="call-to-action-your-apprentice-status">
        Continue setting up an apprenticeship
    </h2>

    <table class="responsive">
        <tr>
            <th scope="row">
                Course
            </th>
            <td id="course-name">
                @(Model.CourseName)                
            </td>
        </tr>
        <tr>
            <th scope="row">
                Training Provider
            </th>
            <td id="provider-name">                
                @(Model?.TrainingProvider?.Name)
            </td>
        </tr>
        <tr>
            <th scope="row">
                Status
            </th>
            <td id="with-training-provider">
                <span class="govuk-tag govuk-tag--inactive">WITH TRAINING PROVIDER</span>
            </td>
        </tr>
    </table>
    <p>

        <a href="@Url.EmployerCommitmentsV2Action($"{Model.ApprovedOrRejectApprenticeDetailsLink}")" role="button" draggable="false" class="button">
            Add more details
        </a>
    </p>
</section>

