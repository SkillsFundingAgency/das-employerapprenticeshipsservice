@using SFA.DAS.EmployerAccounts.Web.Helpers;

@{
    ViewBag.PageID = "page-access-denied";
    ViewBag.Title = "Access denied";
    ViewBag.HideNav = true;
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge access-denied">Access denied</h1>
        <p class="access-denied">Your account does not have sufficient privileges</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">        
        <p>@Html.ReturnParagraphContent()</p>
        <a class="button" href="@Html.ReturnToHomePageButtonHref((string)ViewBag.AccountId)">@Html.ReturnToHomePageButtonText((string)ViewBag.AccountId)</a>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href=@Html.ReturnToHomePageLinkHref((string)ViewBag.AccountId) class="back-link">@Html.ReturnToHomePageLinkText((string)ViewBag.AccountId)</a></li>            
        </ol>
    </div>
}