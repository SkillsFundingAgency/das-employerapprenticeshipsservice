@model SFA.DAS.EmployerApprenticeshipsService.Web.Models.ExtendedApprenticeshipViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Add an apprentice</h1>
        <p>
            Add the details of your apprentice below. If you don't have the information now you can leave it blank and add it later.
        </p>
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            foreach (var state in ViewContext.ViewData.ModelState.Values)
            {
                foreach (var error in state.Errors)
                {
                    <div class="error" style="margin-bottom: 10px;" id="invalidMessage">
                        <p class="error-message">@error.ErrorMessage</p>
                    </div>
                }
            }
        }
        <hr />
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <form method="POST" action="@Url.Action("CreateApprenticeship")">
            <div class="form-group">
                <label class="form-label" for="FirstName">Apprentice first name</label>
                <input class="form-control form-control-3-4" id="FirstName" name="FirstName" type="text"
                       aria-required="true" value="@Model.Apprenticeship.FirstName" />
            </div>
            <div class="form-group">
                <label class="form-label" for="LastName">Apprentice last name</label>
                <input class="form-control form-control-3-4" id="LastName" name="LastName" type="text"
                       aria-required="true" value="@Model.Apprenticeship.LastName" />
                <hr />
            </div>

            <div class="form-group">
                <label class="form-label" for="TrainingId">Find apprenticeship</label>
                <select name="TrainingId" id="TrainingId" class="form-control" aria-label="Training standard">
                    <option value=""></option>
                    @foreach (var standard in Model.Standards)
                    {
                        <option value="@standard.Id">@standard.Title</option>
                    }
                </select>
                <hr />
            </div>

            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="form-label-bold">Projected start date</span>
                    </legend>
                    <div class="form-date">
                        <div class="form-group form-group-month">
                            <label for="startMonth">Month</label>
                            <input class="form-control" id="startMonth" name="startMonth" type="number"
                                   min="1" max="12" placeholder="MM" value="@Model.Apprenticeship.StartMonth">
                        </div>
                        <div class="form-group form-group-year">

                            <label for="startYear">Year</label>
                            <input class="form-control" id="startYear" name="startYear" type="number"
                                   min="2016" max="2030" placeholder="YYYY" value="@Model.Apprenticeship.StartYear">
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="form-label-bold" style="margin-bottom: 0; padding-bottom: 0">Projected finish date</span>
                    </legend>
                    <div class="form-date">
                        <div class="form-group form-group-month">
                            <label for="endMonth">Month</label>
                            <input class="form-control" id="endMonth" name="endMonth" type="number"
                                   min="1" max="12" placeholder="MM" value="@Model.Apprenticeship.EndMonth">
                        </div>
                        <div class="form-group form-group-year">
                            <label for="endYear">Year</label>
                            <input class="form-control" id="endYear" name="endYear" type="number"
                                   min="2016" max="2030" placeholder="YYYY" value="@Model.Apprenticeship.EndYear">
                        </div>
                    </div>
                </fieldset>
                <hr />
            </div>
            
            <div class="form-group">
                <label class="form-label" for="cost">Cost of apprenticeship</label>
                <b>£</b>
                <input class="form-control form-control-3-4" id="cost" name="cost" type="number"
                       step="0.01" min="0.01" value="@Model.Apprenticeship.Cost" />
                <hr />
            </div>

            <div class="form-group">
                <label class="form-label" for="ULN">Unique learner number</label>
                <input class="form-control form-control-3-4" id="ULN" name="ULN" type="text"
                       aria-required="true" value="@Model.Apprenticeship.ULN" />
            </div>
          
            <input type="hidden" id="status" name="status" value="@Model.Apprenticeship.Status" />
            <input type="hidden" id="agreementStatus" name="agreementStatus" value="@Model.Apprenticeship.AgreementStatus" />
            <button type="submit" class="button">Add apprentice</button>
        </form>
    </div>
</div>
