@using SFA.DAS.EmployerApprenticeshipsService.Web
@using SFA.DAS.EmployerApprenticeshipsService.Web.Models

@model OrchestratorResponse<ExtendedCreateCommitmentViewModel>

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Create commitment - select provider</h1>
        <hr />
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <form method="POST" action="@Url.Action("SelectProvider")">
            <div class="form-group">
                <label class="form-label" for="ProviderId">Provider</label>
                    <div class="form-group">
                        <p>Search by UKPRN (UK Provider Registration Number) - your provider will give you this information.</p>
                    </div>
                <select name="ProviderId" id="ProviderId" class="form-control" aria-label="Training Provider">
                    <option value=""></option>
                    @foreach (var provider in Model.Data.Providers)
            {
                        <option value="@provider.Id">@provider.Name</option>
                    }
                </select>
            </div>
            <input type="hidden" id="accountId" name="accountId" value="@Model.Data.Commitment.AccountId" />
            <input type="hidden" id="legalEntityId" name="legalEntityId" value="@Model.Data.Commitment.LegalEntityId" />
            <input type="hidden" id="legalEntityName" name="legalEntityName" value="@Model.Data.Commitment.LegalEntityName" />
            <button type="submit" class="button">Next</button>
        </form>
    </div>
</div>
