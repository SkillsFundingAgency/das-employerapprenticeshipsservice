@using SFA.DAS.EmployerApprenticeshipsService.Web.Models

@model CommitmentViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">View commitment</h1>
        <hr />
        <p>Name</p>
        <p>@Model.Commitment.Name</p>
        <p>Legal Entity</p>
        <p>@Model.Commitment.LegalEntityName</p>
        <p>Provider</p>
        <p>@Model.Commitment.ProviderName</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-full">
        <div class="responsive-table">
            <div class="responsive-thead">
                <div class="responsive-tr">
                    <div class="responsive-th">Apprentice</div>
                    <div class="responsive-th">Training</div>
                    <div class="responsive-th"> </div>
                </div>
            </div>
            <div class="responsive-tbody">
                @foreach (var apprenticeship in Model.Commitment.Apprenticeships)
                {
                    <div class="responsive-tr">
                        <div class="responsive-td">
                            <div>@apprenticeship.ApprenticeshipName</div>
                            <div class="responsive-inner-caption"></div>
                        </div>
                        <div class="responsive-td">
                            <div class="responsive-inner-caption">Role</div>
                            <div>@apprenticeship.TrainingId</div>
                        </div>
                        <div class="responsive-td">
                            <div>
                                <form action="@Url.Action("Edit")" method="GET">
                                    <input type="hidden" name="accountId" value="@Model.Commitment.EmployerAccountId" />
                                    <input type="hidden" name="commitmentId" value="@Model.Commitment.Id" />
                                    <input type="hidden" name="apprenticeshipId" value="@apprenticeship.Id" />
                                    <button type="submit" name="commitment" class="button">View</button>
                                </form>
                            </div>
                            <div class="responsive-inner-caption"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
