@using SFA.DAS.EmployerApprenticeshipsService.Web.Models

@model ExtendedApprenticeshipViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Apprenticeship details</h1>
        <hr />
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <div class="form-group">
            <label class="form-label" for="FirstName">First name</label>
            <label name="FirstName">@Model.Apprenticeship.FirstName</label>
        </div>
        <div class="form-group">
            <label class="form-label" for="LastName">Last name</label>
            <label name="LastName">@Model.Apprenticeship.LastName</label>
        </div>
        <div class="form-group">
            <label class="form-label" for="ULN">Unique learner number</label>
            <label name="ULN">@Model.Apprenticeship.ULN</label>
        </div>
        <div class="form-group">
            <label class="form-label" for="cost">Cost</label>
            <label name="cost">@Model.Apprenticeship.Cost</label>
        </div>
        <div class="form-group">
            <label class="form-label" for="TrainingId">Training</label>
            <label name="TrainingId">@Model.Apprenticeship.TrainingId</label>
        </div>
        <div class="form-group">
            <fieldset>
                <legend>
                    <span class="form-label-bold">Projected start date</span>
                </legend>
                <div class="form-date">
                    <div class="form-group form-group-month">
                        <label class="form-label" for="startMonth">Month</label>
                        <label name="startMonth">@Model.Apprenticeship.StartMonth</label>
                    </div>
                    <div class="form-group form-group-year">

                        <label class="form-label" for="startYear">Year</label>
                        <label name="startYear">@Model.Apprenticeship.StartYear</label>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="form-group">
            <fieldset>
                <legend>
                    <span class="form-label-bold" style="margin-bottom: 0; padding-bottom: 0">Projected finish date</span>
                </legend>
                <div class="form-date">
                    <div class="form-group form-group-month">
                        <label class="form-label" for="endMonth">Month</label>
                        <label name="endMonth">@Model.Apprenticeship.EndMonth</label>
                    </div>
                    <div class="form-group form-group-year">
                        <label class="form-label" for="endYear">Year</label>
                        <label name="endYear">@Model.Apprenticeship.EndYear</label>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="form-group">
            <label class="form-label" for="status">Status</label>
            <label class="" id="status" name="status">@Model.Apprenticeship.Status</label>
        </div>
        <input type="hidden" id="agreementStatus" name="agreementStatus" value="@Model.Apprenticeship.AgreementStatus" />
        <input type="hidden" id="accountId" name="accountId" value="@Model.Apprenticeship.AccountId" />
        <input type="hidden" id="commitmentId" name="commitmentId" value="@Model.Apprenticeship.CommitmentId" />
        <input type="hidden" id="id" name="id" value="@Model.Apprenticeship.Id" />
        <a href="@Url.Action("Details", new { accountId = Model.Apprenticeship.AccountId, commitmentId = Model.Apprenticeship.CommitmentId })" class="button">Back</a>

    </div>
</div>
