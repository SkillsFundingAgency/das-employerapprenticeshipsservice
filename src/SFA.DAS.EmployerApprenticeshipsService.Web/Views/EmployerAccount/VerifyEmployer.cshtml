@model SFA.DAS.EmployerApprenticeshipsService.Web.Models.SelectEmployerViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-medium">Confirm your company name</h1>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">
        <h2 class="heading-small">
            Your company number @Model.CompanyNumber is associated with:
        </h2>
        <h2 class="bold-xlarge">@Model.CompanyName</h2>
        <p>@Model.RegisteredAddress</p>
        <p></p>
        <p></p>
        <p></p>
        <h3 style="margin-top: 100px;"class="heading-small">Use @Model.CompanyName on your contract?</h3>
        <p></p>
        <form method="GET" action="@Url.Action("Gateway")">
            <button type="submit" class="button" id="continue">Continue</button>
            <p></p>
        </form>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol>
            <li><a href="/" class="back-link">Back to Your User Profile</a></li>
        </ol>
    </div>
}