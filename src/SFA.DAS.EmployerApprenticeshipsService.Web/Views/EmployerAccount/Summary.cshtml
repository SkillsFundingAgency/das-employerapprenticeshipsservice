@model SFA.DAS.EmployerApprenticeshipsService.Web.Models.SummaryViewModel
@{ViewBag.Title = "Check details"; }

<div class="grid-row">
    <div class="column-two-thirds">
        @if (string.IsNullOrEmpty(Model.EmployerRef))
        {
            <h1 class="heading-xlarge">PAYE scheme already in use</h1>
            <p>The PAYE scheme for the Government Gateway details you entered is already added to an account.</p>
            <p><a class="button" id="search_again" href="@Url.Action("Gateway","EmployerAccount")">Use different details</a></p>
        }
        else
        {
            <h1 class="heading-xlarge">Check details</h1>
            <table class="top-border">
                <tr>
                    <th scope="row">
                        Organisation
                    </th>
                    <td>
                        <dl class="inline">
                            <dt>Name:</dt>
                            <dd>@Model.CompanyName</dd>
                            <dt>Companies House number:</dt>
                            <dd>@Model.CompanyNumber</dd>
                        </dl>
                    </td>
                </tr>
                <tr>
                    <th scope="row">
                        PAYE scheme
                    </th>
                    <td>
                        @Model.EmployerRef
                    </td>
                </tr>
            </table>
            <h2 class="heading-large">By continuing you agree to the following:</h2>

            <div class="panel">
                <p>
                    I have authority to add PAYE schemes to this account.
                </p>
                <p>
                    I understand that all account users will be able to see levy funds from any PAYE schemes I add.
                </p>
                <p>
                    All PAYE schemes I add are owned and operated by an organisation that'll use this account, or owned and operated by a 
                    <a href="https://www.gov.uk/government/publications/employment-allowance-more-detailed-guidance">connected organisation</a>.
                </p>
            </div>
            <form method="POST" action="@Url.Action("CreateAccount", "EmployerAccount")">
                @Html.AntiForgeryToken()
                <input id="radio1" type="hidden" name="confirm_create" checked="checked" value="1">
                <div class="form-group">
                    <button type="submit" class="button" id="continue">Agree and submit details</button>
                    <a class="button button-link" href="@Url.Action("SelectEmployer", "EmployerAccount")">Change details</a>
                </div>
            </form>
        }

    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol>
            <li><a href="/" class="back-link">Back to Your User Profile</a></li>
        </ol>
    </div>
}