@using SFA.DAS.EmployerApprenticeshipsService.Web.Models

@model TaskViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">View task</h1>
        <hr />
        <div class="form-group">
            <label class="form-label" for="Name">Name</label>
            <label class="form-label" id="Name">@Model.Task.Name</label>
        </div>
        <div class="form-group">
            <label class="form-label" for="CreatedDate">Created Date</label>
            <label class="form-label" id="CreatedDate">@Model.Task.CreatedOn</label>
        </div>
        <div class="form-group">
            <label class="form-label" for="Message">Message</label>
            <label class="form-label" id="Message">@Model.Message</label>
        </div>
       
        <a href="@Url.Action("Details", "EmployerCommitments", new {accountId = Model.AccountId, commitmentId = Model.LinkId})" class="link">View commitment</a>
    </div>
</div>
