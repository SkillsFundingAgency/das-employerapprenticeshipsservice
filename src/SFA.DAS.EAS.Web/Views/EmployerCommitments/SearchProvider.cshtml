@model SFA.DAS.EAS.Web.Models.SelectProviderViewModel

@section Scripts {
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryvalcustom")
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Add training provider details</h1>

    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <form method="POST" action="@Url.Action("SelectProvider")">
            @Html.Partial("ValidationSummary", Html.ViewData.ModelState)

            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.ProviderId, "UK Provider Reference Number", new { @class = "form-label" })

                <div>
                    @Html.ValidationMessageFor(m => m.ProviderId, "Please enter an 8-digit UK Provider Reference Number")

                </div>
                @Html.TextBoxFor(m => m.ProviderId, new { @class = "form-control trainingProvider", aria_label = "Training Provider" })
            </div>


            <button type="submit" class="button">Continue</button>


            @Html.HiddenFor(x => x.LegalEntityCode)
            @Html.HiddenFor(x => x.CohortRef)
        </form>
    </div>
</div>