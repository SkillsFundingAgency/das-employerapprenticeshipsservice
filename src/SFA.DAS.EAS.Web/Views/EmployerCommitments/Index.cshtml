@model String

@{ViewBag.PageID = "apprentices-home-page";}
@{ViewBag.Title = "Apprentices";}

 

<div class="grid-row">
    <form method="POST" action="@Url.Action("SetLegalEntity")">
        <div class="column-two-thirds">
            <h1 class="heading-xlarge">Apprentices</h1>

            <div class="grid-row">
                <div class="column-half ">
                    <h3 class="heading-medium"><a href="@Url.Action("Inform")">Add an apprentice</a></h3>
                    <p class="rj-home-spacer">Add an apprentice to your account, so your training provider gets paid for their training.</p>

                </div>
                <div class="column-half">
                    <h3 class="heading-medium">Update existing apprentices</h3>
                    <p class="rj-home-spacer">View, pause and stop apprentices that you've already added and approved.
</p>
                </div>
            </div>
            <div class="grid-row">
                <div class="column-half ">
                    <h3 class="heading-medium"><a href="@Url.Action("Cohorts")">Requests in progress</a></h3>
                    <p class="rj-home-spacer">Review, edit, approve and add more apprentices to requests you’ve already started.</p>
                </div>
                <div class="column-half">
                </div>
            </div>
        </div>
    </form>
</div>


@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="/">Your User Profile</a></li>
            <li><a href="@Url.Action("Index", "EmployerTeam", new {accountId = ViewBag.HashedAccountId })">Employer Account Homepage</a></li>
            <li>Apprentices</li>
        </ol>
    </div>
}
