@using SFA.DAS.EAS.Web.Models
@using SFA.DAS.EAS.Web.Extensions

@model CommitmentViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">View commitment</h1>
        <table>
            <tbody>
                <tr>
                    <th scope="row">Name</th>
                    <td>@Model.Name</td>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">Legal entity</th>
                    <td>@Model.LegalEntityName</td>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">Provider</th>
                    <td>@Model.ProviderName</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
   

        <h2 class="heading-medium">Apprentices</h2>
        @if (Model.Apprenticeships.Count == 0)
        {
            <p class="panel panel-info">
                No apprentices exist for this commitment.
            </p>
        }
        else
        {
            <table>
            <thead>
                <tr>

                    <th scope="col">Apprentice</th>
                    <th scope="col">Training</th>
                    <th scope="col" colspan="3">Status</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var apprenticeship in Model.Apprenticeships)
                {
                    <tr>
                        <td>
        
                            @apprenticeship.ApprenticeshipName
                        </td>
                        <td>
                          
                            @apprenticeship.TrainingName
                        </td>
                        <td>
                            
                            @apprenticeship.Status.GetDescription()
                        </td>
                        <td>
                                <a href="@Url.Action("ApprenticeshipDetails", new { hashedApprenticeshipId = apprenticeship.HashedId })">View</a>                   
                        </td>
                        <td>
                            @if (apprenticeship.CanBeApproved())
                            {
                                    <form action="@Url.Action("ApproveApprenticeship", new { hashedApprenticeshipId = apprenticeship.HashedId })" method="POST">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="commitment" class="button">Approve</button>
                                    </form>                                
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
        <a href="@Url.Action("CreateApprenticeshipEntry")" class="button">Add an apprentice</a>
    </div>
    <div class="column-one-third">
        <a class="button" href="@Url.Action("FinishedEditing")">Finish Editing</a>
    </div>
</div>
