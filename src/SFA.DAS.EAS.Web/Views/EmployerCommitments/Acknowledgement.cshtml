@using SFA.DAS.EAS.Web
@using SFA.DAS.EAS.Web.Models
@model OrchestratorResponse<AcknowledgementViewModel>

@{
    ViewBag.Title = "Instructions sent";
    ViewBag.PageID = "instructions-sent-end";
}

<div class="grid-row">
    <div class="column-full">
        <div class="govuk-box-highlight green-box">
            <h1 class="heading-xlarge" id="changeHeadline">
                Instructions sent
            </h1>
        </div>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">

        <table class="instructionSent">
            <tbody>
                <tr>
                    <td>Cohort reference</td>
                    <td class="strong">@Model.Data.HashedCommitmentId</td>
                </tr>
                <tr>
                    <td>Sent to </td>
                    <td  class="strong">@Model.Data.ProviderName</td>
                    
                </tr>
                @*<tr>
                    <td>Sent from</td>
                    <td  class="strong">Alice Jones</td>
                   
                </tr>*@
                <tr>
                    <td>On behalf of</td>
                    <td  class="strong">@Model.Data.LegalEntityName</td>
                </tr>
                @*<tr>
                    <td>Date</td>
                    <td  class="strong">Thursday 18 May 2017</td>
                </tr>*@
                <tr>
                    <td>Instructions</td>
                    <td  class="strong">@Model.Data.Message</td>
                </tr>
            </tbody>
        </table>


        <h2 class="heading-medium">What happens next?</h2>
        <p id="changeMainCopy">Your training provider will review your request and contact you as soon as possible - either with questions or to ask you to review the details they've added.</p>

        @*<a class="button" href="@Url.Action("Index")">Continue</a>*@
    </div>

    <div class="column-one-third">
        <aside>
            <div class="panel panel-filled">
                <h2 class="heading-medium">Help us improve this section</h2>
                <p>Take a 3 minute survey about adding apprentices so that we can improve the service.</p>
                <a href=" https://www.surveymonkey.co.uk/r/viewlevy" target="_blank" class="button" title="Take the survey" aria-label="Take the survey">Take the survey</a>


            </div>
        </aside>
    </div>
</div>


@section breadcrumb {
    <div class="breadcrumbs">       
            <a href="@Url.Action("Index", "EmployerCommitments")" aria-label="Back to Apprentices" class="back-link">Back to Apprentices</a>
    </div>
}