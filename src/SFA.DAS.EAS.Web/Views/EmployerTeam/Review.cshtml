@using SFA.DAS.EAS.Domain
@using SFA.DAS.EAS.Web

@model OrchestratorResponse<TeamMember>

@{
    ViewBag.Title = Model.Data.Name;
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">@Model.Data.Name</h1>
        <table>     
            <thead>
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">What they can do</th>
                    <th></th>
                </tr>
            </thead> 
            <tbody>
                <tr>
                    <td>@Model.Data.Email</td>
                    <td>@RoleStrings.ToWhatTheyCanDo(@Model.Data.Role)</td>
                    @if (Model.Data.IsUser)
                    {
                        <td class="link-right">
                            <a href="@Url.Action("ChangeRole", new { AccountId = Model.Data.HashedId, Email = Model.Data.Email })">Change <span class="vh">role for @Model.Data.Name</span></a>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>              
            </tbody>
        </table>
      
        @if (@Model.Data.Status == InvitationStatus.Pending || @Model.Data.Status == InvitationStatus.Expired)
        {
            <div class="form-group">
                <form action="@Url.Action("Resend")" method="POST">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="Email" name="Email" value="@Model.Data.Email" />
                    <button type="submit" class="button" id="resend_invitation">Resend Invitation</button>
                </form>
                <a href="@Url.Action("Cancel", "EmployerTeam",new {accountId = Model.Data.HashedId,email = Model.Data.Email, invitationId = Model.Data.HashedInvitationId })" class="button button-link">Cancel Invitation</a> 
                
            </div>
        }
        @if (@Model.Data.IsUser)
        {
            <form action="@Url.Action("Remove")" method="GET">
                <input type="hidden" id="Email" name="Email" value="@Model.Data.Email" />
                <button type="submit" class="button" id="delete_user">Remove team member</button>
            </form>
         
        }
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="/">Your User Profile</a></li>
            <li><a href="@Url.Action("Index", "EmployerTeam", new {accountId = @Model.Data.HashedId})">Employer Account Homepage</a></li>
            <li><a href="@Url.Action("ViewTeam", "EmployerTeam", new {accountId = @Model.Data.HashedId})">Manage Team Members</a></li>
            <li>@Model.Data.Name</li>
        </ol>
    </div>
}