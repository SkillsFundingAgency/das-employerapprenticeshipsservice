@{ViewBag.PageID = "page-onboard-companies-house"; }
@{ViewBag.Title = "Enter your Companies House number"; }
@{ViewBag.HideNav = "true"; }


@if (TempData["companyNumberError"] != null)
{
    ViewBag.PageID = "page-onboard-companies-house-error";
    <div class="grid-row">
        <div class="column-full error-summary-wrapper">
            <div tabindex="-1" role="group" class="error-summary">
                <h1 id="error-summary" class="heading-medium error-summary-heading">
                    Errors to fix
                </h1>
                <p>Check the following details:</p>
                <ul class="error-summary-list">
                    <li><a href="#error-message-companies-house" data-focuses="error-message-companies-house">Enter a valid Companies House number</a></li>
                </ul>
            </div>
        </div>
    </div>
}
<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Enter your Companies House number</h1>
        <p>Use the Companies House number for an organisation that your apprentices will be employed through.</p>
        <p>If you'll employ apprentices through more than one organisation, add the details of one organisation now. You can add more organisations later. </p>
        <p><a href="https://beta.companieshouse.gov.uk/" rel="external" target="_blank">Find my Companies House number</a></p>
        <form method="POST" action="@Url.Action("SelectEmployer")">
            <div class="form-group @(TempData["companyNumberError"] != null ? "error" : "")">
                @Html.AntiForgeryToken()
                <label for="EmployerRef">
                    <span class="form-label-bold">Companies House number</span>
                    @if (TempData["companyNumberError"] != null)
                    {
                        <span class="error-message" id="error-message-companies-house">Enter a valid Companies House number</span>
                    }
                </label>
                <input class="form-control form-control-3-4" id="EmployerRef" name="EmployerRef" type="text" aria-required="true" 
                       @(TempData["companyNumberError"] != null ? " aria-describedby=error-message-companies-house" : "")
                      />
            </div>
            <button type="submit" class="button" id="submit">Continue</button>
        </form>
    </div>
</div>

    @section breadcrumb {
        <div class="breadcrumbs">
            <a href="/" class="back-link">Back to your levy accounts</a>
        </div>
    }

