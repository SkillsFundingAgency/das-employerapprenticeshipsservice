@using SFA.DAS.EAS.Domain
@using SFA.DAS.EAS.Domain.Models.EmployerAgreement
@using SFA.DAS.EAS.Web;
@using SFA.DAS.EAS.Web.Extensions

@model OrchestratorResponse<SFA.DAS.EAS.Web.ViewModels.EmployerAgreementViewModel>
@{
    ViewBag.PageID = "agreement-view";
    ViewBag.Title = "Agreement view";
    ViewBag.Section = "organisations";
}
<div class="grid-row">
    <div class="column-two-thirds">

        <h1 class="heading-xlarge">
            <span class="heading-secondary">@Model.Data.EmployerAgreement.LegalEntityName</span>
            Your ESFA agreement
        </h1>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">
        <table>
            <tr>
                <th>Accepted by:</th>
                <td>@Model.Data.EmployerAgreement.SignedByName</td>
            </tr>
            <tr>
                <th>On behalf of:</th>
                <td>@Model.Data.EmployerAgreement.LegalEntityName</td>
            </tr>
            <tr>
                <th>Address:</th>
                <td><span class="table-address">@Model.Data.EmployerAgreement.LegalEntityAddress</span></td>
            </tr>
            <tr>
                <th>Accepted on:</th>
                <td>@Model.Data.EmployerAgreement.SignedDate.Value.ToLongDateString()</td>
            </tr>
        </table>
    </div>
</div>
<div class="grid-row" id="publication-banner">
    <div class="column-third">
        <div class="sfa-logo">
            <h1>
                <span class="organisation-logo">
                    <span>
                        Education &amp; Skills <br>
                        Funding Agency
                    </span>
                </span>
            </h1>
        </div>
    </div>
    <div class="column-two-thirds">
        <a href="@Url.Action("GetSignedPdfAgreement", "EmployerAgreement")" target="_blank" class="download">Save this agreement as a PDF</a>
    </div>
</div>

@Html.Partial(Model.Data.EmployerAgreement.TemplatePartialViewName)

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="@Url.Action("Index", "EmployerTeam")">Home</a></li>
            <li><a href="@Url.Action("Index", "EmployerAgreement")">Your organisations and agreements</a></li>
            <li>Your ESFA agreement</li>
        </ol>
    </div>
}
