<div class="grid-row">
    <div class="column-two-thirds">
        <a class="button" href="@Url.Action("Index", "TransferConnectionInvitations")">Connect with employer</a>
    </div>
</div>

@if (Model.TransferConnectionInvitations.Any())
{
    <div class="grid-row">
        <div class="column-full">
            <table class="responsive">
                <caption class="heading-medium">Connection requests</caption>
                <thead>
                    <tr>
                        <th>Employer</th>
                        <th>Status</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invitation in Model.TransferConnectionInvitations)
                    {
                        <tr>
                            <td data-label="Employer">@invitation.ReceiverAccountName</td>
                            <td data-label="Status">@invitation.Status.ToString()</td>
                            <td><a href="@Url.Action("SentDetails", "TransferConnectionInvitations", new { transferConnectionInvitationId = invitation.Id })">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h2 class="heading-medium">Connection requests</h2>
    <p>You have no pending or approved requests</p>
}

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="@Url.Action("Index", "EmployerTeam")">Home</a></li>
            <li><a href="@Url.Action("Index", "EmployerAccountTransactions")">Finance</a></li>
            <li>@ViewBag.Title</li>
        </ol>
    </div>
}