@{
    ViewBag.Title = "Transfers";
    ViewBag.Section = "finance";
    ViewBag.PageID = "page-transfers";
    ViewBag.GaData.Vpv = "/accounts/transfers";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Transfers</h1>
        <p>Employers who pay the apprenticeship levy can transfer up to 10% of their previous year’s levy to other employers with an apprenticeship service account.</p>
        <p>Employers who want to transfer funds must first connect with a receiving employer through the apprenticeship service. Once a connection is made, a receiving employer can request transfer funds from a funding employer.</p>
        <p>Before getting started, make sure you understand the <a href="">rules for sending and receiving transfers</a>.</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <div class="govuk-box-highlight esfa-standout-amount">
            <p class="heading-xlarge">£85,123.23</p>
            <p class="font-medium">Remaining transfer allowance</p>
        </div>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <a class="button" href="@Url.Action("Index", "TransferConnectionInvitations")">Connect with employer</a>
    </div>
</div>

<div class="grid-row">
    <div class="column-full">
        <table class="responsive">
            <caption class="heading-medium">Connection requests</caption>
            <thead>
                <tr>
                    <th>Employer</th>
                    <th>Status</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td data-label="Employer">Good Employer Ltd</td>
                    <td data-label="Status">Pending</td>
                    <td><a href="@Url.Action("Details", "Transfers")">Details</a></td>
                </tr>
                <tr>
                    <td data-label="Employer">Super Employer Ltd</td>
                    <td data-label="Status">Approved</td>
                    <td><a href="@Url.Action("Details", "Transfers")">Details</a></td>
                </tr>
                <tr>
                    <td data-label="Employer">Cool Employer Ltd</td>
                    <td data-label="Status">Approved</td>
                    <td><a href="@Url.Action("Details", "Transfers")">Details</a></td>
                </tr>
                <tr>
                    <td data-label="Employer">Awesome Employer Ltd</td>
                    <td data-label="Status">Rejected</td>
                    <td><a href="@Url.Action("Details", "Transfers")">Details</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="@Url.Action("Index", "EmployerTeam")">Home</a></li>
            <li><a href="@Url.Action("Index", "EmployerAccountTransactions")">Finance</a></li>
            <li>@ViewBag.Title</li>
        </ol>
    </div>
}