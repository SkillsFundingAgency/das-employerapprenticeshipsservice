@model SFA.DAS.EAS.Support.Core.Models.Account
@{
    Layout = null;
}

<div class="grid-row">
    <div class="column-full">

        <h5 class="heading-small">
            <a href="/" class="govuk-back-link">
                Home
            </a>
        </h5>

        <h1 class="heading-large">
            @(Model?.DasAccountName)
            @if (!string.IsNullOrEmpty(Model?.PublicHashedAccountId))
            {
                <span class="heading-secondary"> Account ID @(Model?.PublicHashedAccountId), created @Model.DateRegistered.ToString("dd/MM/yyyy")</span>
            }
            <span class="heading-secondary">
                Levy Status <strong class="govuk-tag govuk-tag--blue">
                    @Model.ApprenticeshipEmployerType
                </strong>
            </span>
        </h1>
    </div>
</div>
